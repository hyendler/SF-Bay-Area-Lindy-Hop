<h2>Welcome <%= "#{@user.first_name} #{@user.last_name}!" %></h2>

<h4>Your Subscribed Channels:</h4>
<% if @user.channels.empty? %>
  <p>You have no subscriptions!</p>
<% else %>
  <ul>
    <% @user.channels.each do |channel| %>
      <li><%= channel.name %></li>
    <% end %>
  </ul>

  <h4>Total price per month for your subscriptions:</h4>
    <% total = @user.channels.reduce(0) {|sum, channel| sum + channel.price_per_month.to_f } %>
    <%= "$#{total}" %><br>
<% end %>


<br>
<form action="/logout" method="get">
  <input type="submit" value="Logout">
</form>